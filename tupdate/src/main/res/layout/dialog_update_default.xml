<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/banner_t_update"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/ic_update" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgd_t_update"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        tools:background="@android:color/holo_red_dark">

        <TextView
            android:id="@+id/title_t_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            tools:text="There is a new version" />

        <TextView
            android:id="@+id/size_t_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textIsSelectable="false"
            tools:text="新版本大小：V1.2 Pro Max" />

        <TextView
            android:id="@+id/description_t_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="80dp"
            android:paddingTop="12sp"
            android:scrollbars="vertical"
            android:textIsSelectable="false"
            tools:text="1.xxxxx\n2.xxxx\n3.xxx\n4.xx\n5.x" />

        <ProgressBar
            android:id="@+id/progress_t_update"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            android:max="1000"
            android:visibility="gone"
            tools:progress="50"
            tools:visibility="visible" />

        <Button
            android:id="@+id/confirm_t_update"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="20dp"
            android:background="@android:color/holo_orange_dark"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            tools:text="Download" />
    </LinearLayout>

    <View
        android:id="@+id/line_t_update"
        android:layout_width="2dp"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/white" />

    <ImageView
        android:id="@+id/close_t_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_close_update" />
</LinearLayout>